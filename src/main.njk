<!DOCTYPE HTML>
<html lang="ru">
<head>
	<title>Тестовое задание</title>
	<meta charset="utf-8">
	<meta name='viewport' content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="all.css">
</head>
<body>

{# date_obj - объект с датой #}
{# date_obj.date - дата #}
{# date_obj.docs - массив из документов #}
{# doc - объект со свойствами docId, docType и массивом products #}
{# products имеет свойства name, image, price, quantity, removed #}

{% for date_obj in data %}
	
	<div class='date'>
	<h3 class="date__btn">&#9013; </h3><h3>{{ date_obj.date }}</h3> <h3>Документов: {{ date_obj.docs | length }} ({{ date_obj.docs | dateTotal }} &#8381)</h3>
		<div class='date-info' style='display:none'>

	{% for doc in date_obj.docs %}

		<div class='income'>
			<div class='income-title'>
				<h3>{{ doc.docType }} №{{ doc.docId }}</h3><h3>{{ doc.products | docTotal }} &#8381;</h3>
			</div>
			<div class='income-goods'>
				<p class="doc__btn">&#9660;</p><p>Товаров: {{ doc.products | length }}</p> 
			</div>
			<div class='income-info' style='display:none'>
				<ul class='goods'>

		{% for product in doc.products %}
			
			<li><img href={{ product.image }} alt={{ product.name }}>
			<h4>{{ product.name }}</h4>
			{{ product.quantity }}

			{% if product.quantity === 1 %}
				штука
			{% elif product.quantity === 2 %}
				штуки
			{% else %}
				штук
			{% endif %}

			 х {{ product.price }} {{ (product.quantity * product.price) | round(2) }}</li><br>
			
		{% endfor %}
				</ul>
		</div>
		</div>

	{% endfor %}

	</div>
	</div>

{% endfor %}

<script src='all.js'></script>
</body>
</html>
